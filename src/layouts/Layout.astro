---
import Footer from "../components/footer.astro";
import Navbar from "../components/navbar.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link
      rel="icon"
      type="image/png"
      href="/ico/favicon-96x96.png"
      sizes="96x96"
    />
    <link rel="icon" type="image/svg+xml" href="/ico/favicon.svg" />
    <link rel="shortcut icon" href="/ico/favicon.ico" />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/ico/apple-touch-icon.png"
    />
    <meta name="apple-mobile-web-app-title" content="Deskreview" />
    <link rel="manifest" href="/ico/site.webmanifest" />
    <meta name="viewport" content="width=device-width" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="A Branding and Campaign Strategy Studio."
    />
    <meta name="generator" content={Astro.generator} />
    <title>Deskreview</title>
  </head>
  <body>
    <div class="root antialiased">
      <Navbar />
      <slot />
      <Footer />
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  :root {
    font-family: Inter, sans-serif;
    font-feature-settings:
      "liga" 1,
      "calt" 1; /* fix for Chrome */
  }

  @supports (font-variation-settings: normal) {
    :root {
      font-family: InterVariable, sans-serif;
    }
  }

  .root {
    isolation: isolate;
  }
</style>
