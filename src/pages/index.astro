---
import "@fontsource-variable/inter";
import "@fontsource-variable/platypi";
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
---

<Layout>
  <div class="min-h-screen flex justify-center">
    <div class="px-15 flex-col max-w-[1440px] flex w-full justify-center">
      <section class="pt-20"></section>
      <section class="font-serif grid grid-cols-[1fr_2fr] pr-10" id="services">
        <p class="font-light text-3xl tracking-[-0.01em]">Our Services</p>
        <div class="flex-col flex font-light text-2xl gap-y-20">
          <div class="flex flex-col pt-1.5">
            <p
              class="pb-3 font-sans border border-transparent font-medium text-xl border-b-slate-500"
            >
              Digital Campaign
            </p>
            <ul class="flex flex-col leading-none">
              <li
                class="pb-5 pt-4 border border-transparent border-b-slate-500"
              >
                Social Media Handling
              </li>
              <li
                class="pb-5 pt-4 border border-transparent border-b-slate-500"
              >
                Digital Campaign Set-up
              </li>
              <li
                class="pb-5 pt-4 border border-transparent border-b-slate-500"
              >
                Digital Ads Handling
              </li>
              <li
                class="pb-5 pt-4 border border-transparent border-b-slate-500"
              >
                Digital Trend Analysis & Research
              </li>
            </ul>
          </div>
          <div class="flex flex-col">
            <p
              class="pb-3 font-sans border border-transparent font-medium text-xl border-b-slate-500"
            >
              Brand Strategy
            </p>
            <ul class="flex flex-col leading-none">
              <li
                class="pb-5 pt-4 border border-transparent border-b-slate-500"
              >
                Visual Identity Development
              </li>
              <li
                class="pb-5 pt-4 border border-transparent border-b-slate-500"
              >
                Branding Communication Set-up
              </li>
              <li
                class="pb-5 pt-4 border border-transparent border-b-slate-500"
              >
                Branding Implementation Set-up
              </li>
            </ul>
          </div>
        </div>
      </section>
      <section class="pb-20"></section>
    </div>
  </div>
</Layout>
